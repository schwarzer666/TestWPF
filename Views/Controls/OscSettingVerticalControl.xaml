<UserControl x:Class="TemperatureCharacteristics.Views.Controls.OscSettingVerticalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureCharacteristics.Views.Controls">
    <Grid>
		<GroupBox
			Header="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
			Background="Lime"
			Margin="0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50*"/>
					<ColumnDefinition Width="65"/>
					<ColumnDefinition Width="45*"/>
				</Grid.ColumnDefinitions>
				<Label 
					Content="Range" 
					Grid.Row="0" Grid.Column="1"/>
				<Label 
					Content="Position" 
					FontSize="10"
					Grid.Row="0" Grid.Column="2"/>
				<Label 
					Content="CH1"
					Margin="2,0,0,0"
					Grid.Row="1" Grid.Column="0"/>
				<ComboBox 
					ItemsSource="{Binding Resources.OscRangeItems}" 
					DisplayMemberPath="Name"
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCRang1Index, Mode=TwoWay, FallbackValue=0}"
					Width="60"
					Grid.Row="1" Grid.Column="1"/>
				<TextBox 
					Text="{Binding OscConfig.OSCPos1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="1" Grid.Column="2"/>
				<Label 
					Content="CH2"  
					Margin="2,0,0,0"
					Grid.Row="2" Grid.Column="0"/>
				<ComboBox  
					ItemsSource="{Binding Resources.OscRangeItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCRang2Index, Mode=TwoWay, FallbackValue=0}" 
					Width="60"
					Grid.Row="2" Grid.Column="1"/>
				<TextBox  
					Text="{Binding OscConfig.OSCPos2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="2" Grid.Column="2"/>
				<Label 
					Content="CH3"  
					Margin="2,0,0,0"
					Grid.Row="3" Grid.Column="0"/>
				<ComboBox 
					ItemsSource="{Binding Resources.OscRangeItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCRang3Index, Mode=TwoWay, FallbackValue=0}"
					Width="60"
					Grid.Row="3" Grid.Column="1"/>
				<TextBox   
					Text="{Binding OscConfig.OSCPos3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="3" Grid.Column="2"/>
				<Label 
					Content="CH4"  
					Margin="2,0,0,0"
					Grid.Row="4" Grid.Column="0"/>
				<ComboBox
					ItemsSource="{Binding Resources.OscRangeItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCRang4Index, Mode=TwoWay, FallbackValue=0}"
					Width="60"
					Grid.Row="4" Grid.Column="1"/>
				<TextBox 
					Text="{Binding OscConfig.OSCPos4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="4" Grid.Column="2"/>
				<Label 
					Content="TRIG"  
					Margin="2,0,0,0"
					Grid.Row="5" Grid.Column="0"/>
				<ComboBox 
					ItemsSource="{Binding Resources.TrigSourceItems}"
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.TrigSourceIndex, Mode=TwoWay, FallbackValue=0}"
					HorizontalAlignment="Center"
					Width="50"
					Grid.Row="5" Grid.Column="1">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock 
								Text="{Binding Name}"
								Background="{Binding Tag, Converter={StaticResource TagToBrushConverter}}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<!--↓バインドは外部で変更-->
				<ComboBox 
					ItemsSource="{Binding Resources.TrigDirectionalItems}"
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding SelectedTrigDirectionalIndex, RelativeSource={RelativeSource AncestorType=UserControl}, 
											Mode=TwoWay, FallbackValue=0}"
					Width="40"
					Grid.Row="5" Grid.Column="2"/>
				<Label 
					Content="TRIGLev"  
					Margin="2,0,0,0"
					FontSize="10"
					Grid.Row="6" Grid.Column="0"/>
				<TextBox  
					Text="{Binding OscConfig.OSCTrigLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="6" Grid.Column="1"/>
				<ComboBox
					ItemsSource="{Binding Resources.UnitsItems}"
					DisplayMemberPath="Name"
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.LevelUnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="6" Grid.Column="2"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
