<UserControl x:Class="TemperatureCharacteristics.Views.Controls.ConstSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureCharacteristics.Views.Controls">
    <Grid>
		<GroupBox
			Header="Const設定" 
			Background="LightBlue">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="60"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="53*"/>
				</Grid.ColumnDefinitions>
				<Label 
					Content="Const値1"  
					Grid.Row="0" Grid.Column="0"/>
				<TextBox  
					Text="{Binding ConstConfig.Const1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="0" Grid.Column="1"/>
				<ComboBox
					ItemsSource="{Binding Resources.UnitsItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding ConstConfig.Const1UnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="0" Grid.Column="2"/>
				<Label 
					Content="Const値2"  
					Grid.Row="1" Grid.Column="0"/>
				<TextBox  
					Text="{Binding ConstConfig.Const2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="1" Grid.Column="1"/>
				<ComboBox 
					ItemsSource="{Binding Resources.UnitsItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding ConstConfig.Const2UnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="1" Grid.Column="2"/>
				<Label 
					Content="Const値3"  
					Grid.Row="2" Grid.Column="0"/>
				<TextBox  
					Text="{Binding ConstConfig.Const3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="2" Grid.Column="1"/>
				<ComboBox 
					ItemsSource="{Binding Resources.UnitsItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding ConstConfig.Const3UnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="2" Grid.Column="2"/>
				<Label 
					Content="Const値4"  
					Grid.Row="3" Grid.Column="0"
					Visibility="{Binding ConstConfig.HasConst4, Converter={StaticResource BooleanToCollapsedVisibilityConverter}}"/>
				<TextBox  
					Text="{Binding ConstConfig.Const4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="3" Grid.Column="1"
					Visibility="{Binding ConstConfig.HasConst4, Converter={StaticResource BooleanToCollapsedVisibilityConverter}}"/>
				<ComboBox 
					ItemsSource="{Binding Resources.UnitsItems}" 
					DisplayMemberPath="Name" 
					IsReadOnly="True"
					SelectedIndex="{Binding ConstConfig.Const4UnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="3" Grid.Column="2"
					Visibility="{Binding ConstConfig.HasConst4, Converter={StaticResource BooleanToCollapsedVisibilityConverter}}"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
