<UserControl x:Class="TemperatureCharacteristics.Views.Controls.InstrumentListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureCharacteristics.Views.Controls">
	<StackPanel>
		<Label 
			Content="USB ID List (選択するとクリップボードにコピー)"
			Margin="0,5,0,0"/>
		<ListBox 
			ItemsSource="{Binding USBIDList}"
			SelectedItem="{Binding SelectedUSBID, Mode=TwoWay}"
			SelectionChanged="ListBox_SelectionChanged"
			Height="50"
			Margin="2"/>
	</StackPanel>
</UserControl>
