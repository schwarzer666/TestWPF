<UserControl x:Class="TemperatureCharacteristics.Views.Controls.SaveLoadPresetPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureCharacteristics.Views.Controls">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition Width="100"/>
		</Grid.ColumnDefinitions>
		<!-- Save -->
		<Button 
            x:Name="SaveButton"
            Content="測定条件Save"
            Command="{Binding OpenSavePopupCommand}"
            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
			Style="{StaticResource CardButtonStyle}"
            Width="90"
            Height="40"
            Margin="5"
            Grid.Column="0" Cursor="Hand"/>

		<!-- Load -->
		<Button
            x:Name="LoadButton"
            Content="測定条件Load"
            Command="{Binding OpenLoadPopupCommand}"
            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
			Style="{StaticResource CardButtonStyle}"
            Width="90"
            Height="40"
            Margin="5"
            Grid.Column="1" Cursor="Hand"/>

		<!-- Preset -->
		<Button
            x:Name="PresetButton"
            Content="プリセット一覧"
            Command="{Binding OpenPresetPopupCommand}"
            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
			Style="{StaticResource CardButtonStyle}"
            Width="90"
            Height="40"
            Margin="5"
            Grid.Column="2" Cursor="Hand"/>

		<!-- Save Popup -->
		<Popup 
            IsOpen="{Binding IsSavePopupOpen, Mode=TwoWay}"
            PlacementTarget="{Binding ElementName=SaveButton}"
            Placement="Right"
            AllowsTransparency="True"
            PopupAnimation="Slide"
            HorizontalOffset="5">

			<Border Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Effect="{StaticResource PopupShadow}">

				<StackPanel Width="160">
					<TextBlock Text="保存操作"
                               FontWeight="Bold"
                               Margin="5,0,5,10"
                               Foreground="#444"/>

					<UniformGrid Columns="1" Rows="2">
						<Button 
                            Content="このタブのみSave"
                            Command="{Binding SaveUserConfigsCommand}"
                            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
							Style="{StaticResource CardButtonStyle}"
                            Width="150"
                            Margin="5"/>

						<Button 
                            Content="全タブSave"
                            Command="{Binding SaveAllUserConfigsCommand}"
                            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
							Style="{StaticResource CardButtonStyle}"
                            Width="150"
                            Margin="5"/>
					</UniformGrid>
				</StackPanel>
			</Border>
		</Popup>

		<!-- Load Popup -->
		<Popup 
            IsOpen="{Binding IsLoadPopupOpen, Mode=TwoWay}"
            PlacementTarget="{Binding ElementName=LoadButton}"
            Placement="Right"
            AllowsTransparency="True"
            PopupAnimation="Slide"
            HorizontalOffset="5">

			<Border Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Effect="{StaticResource PopupShadow}">

				<StackPanel Width="160">
					<TextBlock Text="読込操作"
                               FontWeight="Bold"
                               Margin="5,0,5,10"
                               Foreground="#444"/>

					<UniformGrid Columns="1" Rows="2">
						<Button 
                            Content="このタブにLoad"
                            Command="{Binding LoadUserConfigsCommand}"
                            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
							Style="{StaticResource CardButtonStyle}"
                            Width="150"
                            Margin="5"/>

						<Button 
                            Content="全タブLoad"
                            Command="{Binding LoadAllUserConfigsCommand}"
                            CommandParameter="{Binding TabViewModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
							Style="{StaticResource CardButtonStyle}"
                            Width="150"
                            Margin="5"/>
					</UniformGrid>
				</StackPanel>
			</Border>
		</Popup>

		<!-- Preset Popup -->
		<Popup 
            IsOpen="{Binding DataContext.IsPresetPopupOpen, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
            PlacementTarget="{Binding ElementName=PresetButton}"
            Placement="Right"
            AllowsTransparency="True"
            PopupAnimation="Slide"
            HorizontalOffset="5">

			<Border Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Effect="{StaticResource PopupShadow}">

				<ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
					<StackPanel Width="160">
						<ItemsControl ItemsSource="{Binding PlacementTarget.DataContext.FilteredPresetButtons, RelativeSource={RelativeSource AncestorType=Popup}}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Button 
                                        Content="{Binding Name}"
                                        Command="{Binding PlacementTarget.DataContext.SelectPresetCommand, RelativeSource={RelativeSource AncestorType=Popup}}" 
                                        CommandParameter="{Binding}"
                                        Tag="{Binding Id}"
										Style="{StaticResource CardButtonStyle}"
										Background="{Binding BackgroundColor, Converter={StaticResource StringToBrushConverter}}"
                                        Width="150"
                                        Margin="5,2"/>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</StackPanel>
				</ScrollViewer>
			</Border>
		</Popup>
	</Grid>
</UserControl>
