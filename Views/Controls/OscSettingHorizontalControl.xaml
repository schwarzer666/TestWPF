<UserControl x:Class="TemperatureCharacteristics.Views.Controls.OscSettingHorizontalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TemperatureCharacteristics.Views.Controls">
    <Grid>
		<GroupBox
				Header="OSC設定2(Horizontal)" 
				Background="Lime">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="45"/>
					<ColumnDefinition Width="45"/>
					<ColumnDefinition Width="60"/>
				</Grid.ColumnDefinitions>
				<Label 
					Content="TimeDiv." 
					FontSize="9"
					Grid.Row="0" Grid.Column="0"/>
				<ComboBox 
					ItemsSource="{Binding Resources.OscTimeRangeItems}" 
					DisplayMemberPath="Name"
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCTimeRangeIndex, Mode=TwoWay, FallbackValue=0}"
					Width="45"
					Grid.Row="0" Grid.Column="1"/>
				<ComboBox 
					ItemsSource="{Binding Resources.OscTDivUnitItems}" 
					DisplayMemberPath="Name"
					IsReadOnly="True"
					SelectedIndex="{Binding OscConfig.OSCTimeRangeUnitIndex, Mode=TwoWay, FallbackValue=0}"
					Width="55"
					Grid.Row="0" Grid.Column="2"/>
				<Label 
					Content="TimePos." 
					FontSize="9"
					Grid.Row="1" Grid.Column="0"/>
				<TextBox 
					Text="{Binding OscConfig.OSCTimePos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Grid.Row="1" Grid.Column="1"/>
				<Label 
					Content="%" 
					FontSize="9"
					Grid.Row="1" Grid.Column="2"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
