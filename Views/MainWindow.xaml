<Window x:Class="TemperatureCharacteristics.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:TemperatureCharacteristics.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:ver="clr-namespace:VerInfo"
		xmlns:behaviors="clr-namespace:TemperatureCharacteristics.Behaviors"
		xmlns:converters="clr-namespace:TemperatureCharacteristics.Converters"
		xmlns:models="clr-namespace:TemperatureCharacteristics.Models"
		xmlns:controls="clr-namespace:TemperatureCharacteristics.Views.Controls"
        mc:Ignorable="d"
        x:Name="MainWindowInstance"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel, IsDesignTimeCreatable=True}"
		Title="MainWindow" Height="700" Width="1030" d:Width="1500"
        MinWidth="800" MinHeight="400">
	<!--d:DataContext="{d:DesignInstance Type=sweeptab:TabViewModel, IsDesignTimeCreatable=True}"-->
	<!--↑アプリを動作させないとTabが配置されずオブジェクトの再配置がしにくいので-->
	<!--↑デザイナーでのみ使用されるデータコンテキスト デザイナーで MainViewModel をインスタンス化可能にする。-->
	<!--↑Height="700"はウィンドウタイトルバー(40ピクセル)も含めた高さ-->
	<!--↑デザイン時の専用幅d:Width="1500"-->
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/SweepTabContent.xaml"/>
				<ResourceDictionary Source="Resources/DelayTabContent.xaml"/>
				<ResourceDictionary Source="Resources/VITabContent.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<!--Debugパネル表示用-->
	<VisualStateManager.VisualStateGroups>
		<VisualStateGroup x:Name="WindowSizeStates">
			<VisualState x:Name="NormalState">
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Width" To="1030" Duration="0:0:0.3"/>
					<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DebugPanel" Storyboard.TargetProperty="Visibility">
						<DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
					</ObjectAnimationUsingKeyFrames>
				</Storyboard>
			</VisualState>
			<VisualState x:Name="ExpandedState">
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Width" To="1500" Duration="0:0:0.3"/>
					<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DebugColumn" Storyboard.TargetProperty="Width">
						<DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static GridLength.Auto}"/>
					</ObjectAnimationUsingKeyFrames>
					<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DebugPanel" Storyboard.TargetProperty="Visibility">
						<DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
					</ObjectAnimationUsingKeyFrames>
				</Storyboard>
			</VisualState>
		</VisualStateGroup>
	</VisualStateManager.VisualStateGroups>
	<Grid>
		<!--<Grid.Resources>
			<Style TargetType="CheckBox">
				<Setter Property="Margin" Value="10,7,0,0"/>
			</Style>
			<Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
				<Setter Property="Margin" Value="2"/>
			</Style>
			<Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
				<Setter Property="FontSize" Value="12"/>
			</Style>
		</Grid.Resources>-->
		<!--Window表示幅-->
		<Grid.ColumnDefinitions>
			<!-- 1列目: USB ID、信号名、チェックボックス -->
			<ColumnDefinition Width="500"/>
			<!-- 2列目: SweepTab -->
			<ColumnDefinition Width="500"/>
			<!-- 3列目: デバッグパネル（初期非表示） -->
			<!-- デザイン時の専用幅d:Width="500"-->
			<ColumnDefinition x:Name="DebugColumn" Width="0" d:Width="500"/>
		</Grid.ColumnDefinitions>

		<!-- 1列目:入力項目 -->
		<Grid IsEnabled="{Binding IsUiEnabled}" Grid.Row="0" Grid.Column="0">
			<!--1列目を内部で20行×3列に分割-->
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>				<!-- ヘッダー -->
				<RowDefinition Height="30"/>				<!-- 電源1 -->
				<RowDefinition Height="30"/>				<!-- 電源2 -->
				<RowDefinition Height="30"/>				<!-- 電源3 -->
				<RowDefinition Height="30"/>				<!-- 電源4 -->
				<RowDefinition Height="30"/>				<!-- OSC -->
				<RowDefinition Height="30"/>				<!-- PG-->
				<RowDefinition Height="30"/>				<!-- DMM1 -->
				<RowDefinition Height="30"/>				<!-- DMM2 -->
				<RowDefinition Height="30"/>				<!-- DMM3 -->
				<RowDefinition Height="30"/>				<!-- DMM4 -->
				<RowDefinition Height="30"/>				<!-- サーモ -->
				<RowDefinition Height="30"/>				<!-- リレー -->
				<RowDefinition Height="30"/>				<!-- ヘッダー -->
				<RowDefinition Height="Auto"/>				<!-- ID List -->
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="70"/>				<!-- checkbox -->
				<ColumnDefinition Width="310*"/>			<!-- ID -->
				<ColumnDefinition Width="80"/>				<!-- SignalName -->
			</Grid.ColumnDefinitions>
			<!-- 1列目内：1～13行×3列 -->
			<!--ID取得ボタンを押すまでブラーエフェクト-->
			<controls:OverlayControl 
				IsActive="{Binding IsScanningDevices}" 
				Grid.Row="1" Grid.Column="0"
				Grid.RowSpan="19" 
				Grid.ColumnSpan="3"
				Panel.ZIndex="999"/>
			<!--USB ID取得ボタン-->
			<Button
				x:Name="Get_USBID"
				Content="ID取得" 
				Command="{Binding GetUSBIDCommand}"
				Margin="5,0,2,0"
				Grid.Row="0" Grid.Column="0"/>
			<Label 
                Content="USB ID (ドロップダウンリストから選択か直接入力)" 
                Margin="0,2,0,0"
                Grid.Row="0" Grid.Column="1"/>
			<Label 
				Content="Signal Name" 
				Margin="0,2,0,0"
                Grid.Row="0" Grid.Column="2"/>
			
			<!--測定器-->
			<ItemsControl ItemsSource="{Binding Instruments}"
              Grid.Row="1" Grid.Column="0"
              Grid.RowSpan="12" Grid.ColumnSpan="3">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<controls:InstrumentRowControl/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>

			<!--USB IDリスト 行方向×列方向跨ぎ(2×2)-->
			<controls:InstrumentListControl
				Grid.Row="13" Grid.Column="0"
				Grid.RowSpan="2" Grid.ColumnSpan="2"/>
			
			<!--USB 接続確認ボタン 行方向跨ぎ(2行分)-->
			<Button
				x:Name="Conn_USBID"
				Content="接続確認" 
				Command="{Binding ConnectUSBIDCommand}"
				Margin="2"
				Width="75" 
				Grid.Row="13" Grid.Column="2"
				Grid.RowSpan="2"/>
			
			<!-- 1列目内：14～18行×2列 -->
			<Grid 
				Grid.Row="15" Grid.Column="0"
				 Grid.RowSpan="5" Grid.ColumnSpan="3">
				<Grid.RowDefinitions>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="250"/>
					<ColumnDefinition Width="250"/>
				</Grid.ColumnDefinitions>
				<!--リレーマニュアルON/OFF 行方向跨ぎ(5行分)-->
				<GroupBox
					Header="リレーマニュアルON/OFF"
					IsEnabled="{Binding RelayChecked}"
					Height="140"
					Width="230"
					Margin="10,0" 
					Grid.Row="0" Grid.Column="0" Grid.RowSpan="5">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="20"/>
							<RowDefinition Height="20"/>
							<RowDefinition Height="20"/>
							<RowDefinition Height="20"/>
							<RowDefinition Height="20"/>
							<RowDefinition Height="20"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="100*"/>
							<ColumnDefinition Width="100*"/>
						</Grid.ColumnDefinitions>
						<RadioButton Content="リレー1" GroupName="RelayGroup" Margin="5,0" Grid.Row="0" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=1}"/>
						<RadioButton Content="リレー2" GroupName="RelayGroup" Margin="5,0" Grid.Row="1" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=2}"/>
						<RadioButton Content="リレー3" GroupName="RelayGroup" Margin="5,0" Grid.Row="2" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=3}"/>
						<RadioButton Content="リレー4" GroupName="RelayGroup" Margin="5,0" Grid.Row="3" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=4}"/>
						<RadioButton Content="リレー5" GroupName="RelayGroup" Margin="5,0" Grid.Row="4" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=5}"/>
						<RadioButton Content="リレー6" GroupName="RelayGroup" Margin="5,0" Grid.Row="5" 
									 IsChecked="{Binding Relay.SelectedRelay, Converter={StaticResource RelayConverter}, ConverterParameter=6}"/>
						<Button 
							Content="リレーON"
							Command="{Binding Relay.SetRelayOnCommand}"
							Height="30"
							Width="75" 
							Margin="5,0" 
							Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>
						<Button 
							Content="全リレーOFF"
							Command="{Binding Relay.SetRelayOffCommand}"
							Height="30"
							Width="75" 
							Margin="5,0" 
							Grid.Row="3" Grid.Column="1" Grid.RowSpan="2"/>
					</Grid>
				</GroupBox>
				<!--複数個測定　行方向跨ぎ(2行分)-->
				<GroupBox
					Margin="0,0,2,0"
					Grid.Row="0" Grid.Column="1"
					Grid.RowSpan="2">
					<GroupBox.Header>
						<CheckBox 
							Content="複数個測定"
							IsEnabled="{Binding RelayChecked}"
							IsChecked="{Binding Relay.MultiSample, Mode=TwoWay}"/>
					</GroupBox.Header>
					<Grid 
						IsEnabled="{Binding Relay.MultiSample}">
						<Grid.RowDefinitions>
							<RowDefinition Height="30"/>
							<RowDefinition Height="30"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="70"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Label
							Content="サンプル数"
							HorizontalAlignment="Center"
							Grid.Row="0" Grid.Column="0"/>
						<ComboBox 
							SelectedValue="{Binding Relay.SampleCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							SelectedValuePath="Content"
							SelectedIndex="0" 
							Width="50"
							Margin="2" 
							Grid.Row="0" Grid.Column="1">
							<ComboBoxItem Content ="1"/>
							<ComboBoxItem Content ="2"/>
							<ComboBoxItem Content ="3"/>
							<ComboBoxItem Content ="4"/>
							<ComboBoxItem Content ="5"/>
							<ComboBoxItem Content ="6"/>
						</ComboBox>
					</Grid>
				</GroupBox>
				<!--サーモ設定温度 列方向跨ぎ(2行分)-->
				<GroupBox
					Margin="0,0,2,0"
					Grid.Row="2" Grid.Column="1"
					Grid.RowSpan="2">
					<GroupBox.Header>
						<CheckBox 
							Content="Tempaerture List (コンマ区切りで入力)"
							IsEnabled="{Binding ThermoChecked}"
							IsChecked="{Binding MultiTemperature, Mode=TwoWay}"/>
					</GroupBox.Header>
					<Grid 
						IsEnabled="{Binding MultiTemperature}">
						<Grid.RowDefinitions>
							<RowDefinition Height="30"/>
							<RowDefinition Height="30"/>
						</Grid.RowDefinitions>
						<Grid.ToolTip>
							<ToolTip>
								<TextBlock>
								温度は順不同も可<LineBreak/>
								空白の場合は25.0℃を設定
								</TextBlock>
							</ToolTip>
						</Grid.ToolTip>
						<TextBox
							Text="{Binding TemperatureListText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							TextWrapping="Wrap" 
							Grid.Row="0" Grid.Column="0"/>
					</Grid>
				</GroupBox>
				<!--バージョン情報-->
				<TextBlock  
				Text="{x:Static ver:VersionInfo.Version}" 
				HorizontalAlignment="Right"
				Margin="0,5,5,0" 
				Grid.Row="4" Grid.Column="1"/>
			</Grid>
		</Grid>

		<!-- 2列目:Tab -->
		<Grid Grid.Row="0" Grid.Column="1">
			<!--2列目を内部で3行に分割-->
			<Grid.RowDefinitions>
				<RowDefinition Height="25"/>			<!-- ウィンドウ拡張用チェックボックス -->
				<RowDefinition Height="*"/>				<!-- 各親Tab -->
				<RowDefinition Height="Auto"/>			<!-- 測定開始ボタンと全測定対象表示テキストブロック -->
			</Grid.RowDefinitions>
			<!--ウィンドウ拡張用チェックボックス 1行目に配置-->
			<CheckBox 
				x:Name="ExpandWindowCheckBox" 
				Content="デバッグパネル表示"
				Checked="ExpandWindowCheckBox_Checked" 
				Unchecked="ExpandWindowCheckBox_Unchecked" 
				Margin="350,5,0,5" 
				Grid.Row="0"/>
			<!--親Tab(SweepTab,DelayTab,VITab) 2行目に配置-->
			<TabControl Grid.Row="1">
				<!--Sweep Tab-->
				<TabItem 
					Header="Sweep"
					DataContext="{Binding SweepTabs}">
					<Grid Background="LightGray">
						<!--SweepTab内で2行に分割-->
						<Grid.RowDefinitions>
							<RowDefinition Height="480"/>
							<RowDefinition Height="40"/>
						</Grid.RowDefinitions>
						<!--子Tab(各ItemTab) 1行目に配置-->
						<TabControl Grid.Row="0"
							ItemsSource="{Binding Tabs}"
							SelectedIndex="{Binding SelectedIndex}"
							VirtualizingStackPanel.IsVirtualizing="True"
							CacheMode="BitmapCache"
							Loaded="TabControl_Loaded">
							<!--ItemTabヘッダー-->
							<TabControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ItemHeader}"/>
								</DataTemplate>
							</TabControl.ItemTemplate>
							<!--Tabコンテンツテンプレート-->
							<!--記述量が増えたためResources/SweepTabContent.xamlにコード分割-->
							<!--SweepTabContentTemplateでバインド-->
							<TabControl.ContentTemplate>
								<DataTemplate>
									<ContentControl 
										Content="{Binding}" 
										ContentTemplate="{StaticResource SweepTabContentTemplate}"/>
								</DataTemplate>
							</TabControl.ContentTemplate>
						</TabControl>
						<!--測定対象表示テキストブロック 2行目に配置-->
						<Label 
							Content="Sweep測定" 
							HorizontalAlignment="Left"
							VerticalAlignment="Top"
							Grid.Row="1"/>
						<TextBlock  
							Text="{Binding CheckedTabNamesText}"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Top"
							TextWrapping="Wrap" 
							Margin="5,20,0,0"
							Grid.Row="1"/>
					</Grid>
				</TabItem>
				<!--Delay Tab-->
				<TabItem 
					Header="Delay"
					DataContext="{Binding DelayTabs}">
					<Grid Background="LightGray">
						<!--DelayTab内で2行に分割-->
						<Grid.RowDefinitions>
							<RowDefinition Height="500"/>
							<RowDefinition Height="50"/>
						</Grid.RowDefinitions>
						<!--子Tab(各ItemTab) 1行目に配置-->
						<TabControl Grid.Row="0"
							ItemsSource="{Binding Tabs}"
							SelectedIndex="{Binding SelectedIndex}"
							VirtualizingStackPanel.IsVirtualizing="True"
							CacheMode="BitmapCache"
							Loaded="TabControl_Loaded">
							<!--ItemTabヘッダー-->
							<TabControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ItemHeader}"/>
								</DataTemplate>
							</TabControl.ItemTemplate>
							<!--Tabコンテンツテンプレート-->
							<!--記述量が増えたためResources/DelayTabContent.xamlにコード分割-->
							<!--DelayTabContentTemplateでバインド-->
							<TabControl.ContentTemplate>
								<DataTemplate>
									<ContentControl 
										Content="{Binding}" 
										ContentTemplate="{StaticResource DelayTabContentTemplate}"/>
								</DataTemplate>
							</TabControl.ContentTemplate>
						</TabControl>
						<!--測定対象表示テキストブロック 2行目に配置-->
						<Label 
							Content="Delay測定" 
							HorizontalAlignment="Left"
							VerticalAlignment="Top"
							Grid.Row="1"/>
						<TextBlock  
							Text="{Binding CheckedTabNamesText}"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Top"
							TextWrapping="Wrap" 
							Margin="5,20,0,0"
							Grid.Row="1"/>
					</Grid>
				</TabItem>
				<!--VI Tab-->
				<TabItem 
					Header="VI"
					DataContext="{Binding VITabs}">
					<Grid Background="LightGray">
						<!--VITab内で2行に分割-->
						<Grid.RowDefinitions>
							<RowDefinition Height="500"/>
							<RowDefinition Height="50"/>
						</Grid.RowDefinitions>
						<!--子Tab(各ItemTab) 1行目に配置-->
						<TabControl Grid.Row="0"
							ItemsSource="{Binding Tabs}"
							SelectedIndex="{Binding SelectedIndex}"
							VirtualizingStackPanel.IsVirtualizing="True"
							CacheMode="BitmapCache"
							Loaded="TabControl_Loaded">
							<!--ItemTabヘッダー-->
							<TabControl.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ItemHeader}"/>
								</DataTemplate>
							</TabControl.ItemTemplate>
							<!--Tabコンテンツテンプレート-->
							<!--記述量が増えたためResources/VITabContent.xamlにコード分割-->
							<!--VITabContentTemplateでバインド-->
							<TabControl.ContentTemplate>
								<DataTemplate>
									<ContentControl 
										Content="{Binding}" 
										ContentTemplate="{StaticResource VITabContentTemplate}"/>
								</DataTemplate>
							</TabControl.ContentTemplate>
						</TabControl>
						<!--測定対象表示テキストブロック 2行目に配置-->
						<Label 
							Content="VI測定" 
							HorizontalAlignment="Left"
							VerticalAlignment="Top"
							Grid.Row="1"/>
						<TextBlock  
							Text="{Binding CheckedTabNamesText}"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Top"
							TextWrapping="Wrap" 
							Margin="5,20,0,0"
							Grid.Row="1"/>
					</Grid>
				</TabItem>
			</TabControl>
			<!--測定開始ボタン＋状況通知＋最終結果ファイル名テキストボックス 3行目に配置-->
			<Grid
				Grid.Row="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
					<RowDefinition Height="25"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="80"/>
					<ColumnDefinition Width="90"/>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="100"/>
				</Grid.ColumnDefinitions>
				<!--全タブ測定対象表示テキストブロック-->
				<Label
					Content="測定項目" 
					Grid.Row="0" Grid.Column="0"/>
				<ScrollViewer 
					Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
					VerticalScrollBarVisibility="Auto"
					HorizontalScrollBarVisibility="Disabled"
					MaxHeight="25">
					<TextBlock  
						Text="{Binding AllCheckedTabNamesText}"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Center"
						TextWrapping="Wrap"/>
				</ScrollViewer>
				<!--結果ファイル名入力テキストボックス-->
				<Label
					Content="結果ファイル名" 
					ToolTip="最終データのファイル名（拡張子不要）"
					Grid.Row="1" Grid.Column="0"/>
				<TextBox
					Text="{Binding FinalFileName, UpdateSourceTrigger=PropertyChanged}"
					ToolTip="最終データのファイル名（拡張子不要）"
					Grid.Row="1" Grid.Column="1"
					Grid.ColumnSpan="2"/>
				<!--測定状況通知テキストブロック-->
				<Label
					Content="測定ステータス" 
					Grid.Row="2" Grid.Column="0"/>
				<TextBlock 
					Text="{Binding MeasurementStatus}" 
					HorizontalAlignment="Stretch" 
					VerticalAlignment="Center" 
					TextWrapping="Wrap"
					Grid.Row="2" Grid.Column="1"/>
				<!--測定開始ボタン-->
				<Button
					Content="{Binding IsRunning, Converter={StaticResource BooleanToOppositeConverter}, ConverterParameter='測定開始|停止'}"
					Command="{Binding StartMeasurementCommand}"
					Margin="5" 
					Width="75" 
					Grid.Row="0" Grid.Column="3"
					Grid.RowSpan="3"/>
			</Grid>
		</Grid>

		<!-- 3列目:Debugパネル(初期非表示) -->
		<Grid 
			x:Name="DebugPanel"
			Visibility="Collapsed"
			d:Visibility="Visible" 
			Background="LightGray"
			Margin="10"
			Grid.Row="0" Grid.Column="2">
			<!--3列目を内部で20行×3列に分割-->
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="250"/>
			</Grid.ColumnDefinitions>
			<TextBox 
				x:Name="debug_USBID" 
				Text="{Binding DebugVM.DebugUSBID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				Margin="5,2" 
				TextWrapping="Wrap" 
				Grid.Row="0" Grid.Column="0"
				Grid.ColumnSpan="2"/>
			<TextBox 
				x:Name="debug_send_cmd"
				Text="{Binding DebugVM.DebugSendCmd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				Margin="5,2" 
				TextWrapping="Wrap"  
				Grid.Row="1" Grid.Column="0" 
				Grid.ColumnSpan="2"/>
			<TextBox 
				x:Name="debug_log"
				Text="{Binding DebugVM.DebugLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				VerticalContentAlignment="Top"
				Margin="5,2" 
				TextWrapping="Wrap"
				VerticalScrollBarVisibility="Auto"
				Grid.Row="2" Grid.Column="0" Grid.RowSpan="6">
				<i:Interaction.Behaviors>
					<behaviors:ScrollToEndBehavior/>
				</i:Interaction.Behaviors>
			</TextBox>
			<Button 
				x:Name="debug_send" 
				Content="Cmd Send" 
				Command="{Binding DebugSendCommand}"
				Margin="5,2" 
				Grid.Row="3" Grid.Column="1"/>
			<Button
				x:Name="debug_query"
				Content="Cmd Query"
				Command="{Binding DebugQueryCommand}"
				Margin="5,2"
				Grid.Row="5" Grid.Column="1"/>
			<Button 
				x:Name="debug_log_clear"
				Content="Log_Clear" 
				Command="{Binding DebugLogClearCommand}"
				Margin="5,2" 
				Grid.Row="7" Grid.Column="1"/>
			<!--Debug Option群-->
			<!--Optionの数が増えてきたら他Tabと同様分割してバインド-->
			<Label 
				Content="Debug Option" 
				Grid.Row="0" Grid.Column="3"/>
			<Grid 
				Grid.Row="1" Grid.Column="3"
				Grid.RowSpan="7">
				<ScrollViewer>
					<StackPanel>
						<CheckBox 
							Content="結果ファイル出力時測定器フッターを削除"
							IsChecked="{Binding DebugVM.DebugFinalFileFotterRemove, Mode=TwoWay}"/>
						<CheckBox 
							Content="OSC未使用ChOFF(8chOSC使用時)"
							IsChecked="{Binding DebugVM.DebugUse8chOSC, Mode=TwoWay}"/>
						<CheckBox 
							Content="エラー発生時停止"
							IsChecked="{Binding DebugVM.DebugStopOnWarning, Mode=TwoWay}"/>
						<CheckBox 
							Content="サーモストリーマ安定時間変更(sec)"
							IsChecked="{Binding DebugVM.DebugEditThermoSoak, Mode=TwoWay}"/>
						<TextBox 
							x:Name="ThermoSoakTime" 
							Text="{Binding DebugVM.DebugThermoSoakTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							IsEnabled="{Binding DebugVM.DebugEditThermoSoak}"
							Width="50"
							HorizontalAlignment="Left"
							Margin="30,0,0,0"
							TextWrapping="Wrap"/>
						<CheckBox 
							Content="デバッグ窓表示上限"
							IsChecked="{Binding DebugVM.DebugEditMaxLogLines, Mode=TwoWay}"/>
						<TextBox 
							x:Name="MaxLogLines" 
							Text="{Binding DebugVM.DebugMaxLogLines, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							IsEnabled="{Binding DebugVM.DebugEditMaxLogLines}"
							Width="50"
							HorizontalAlignment="Left"
							Margin="30,0,0,0"
							TextWrapping="Wrap"/>
						<Label 
							Content="設定保存初期フォルダ"/>
						<TextBox 
							x:Name="SaveLoadDefaultFolder" 
							Text="{Binding DebugVM.SaveLoadDefaultFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							HorizontalAlignment="Left"
							Margin="30,0,0,0"
							TextWrapping="Wrap"/>
						<CheckBox 
							Content="USB ID取得をスキップ"
							IsChecked="{Binding DebugVM.SkipUsbIdCheck}"/>
						<TextBox 
							x:Name="Debug_textbox3" 
							Text="Debug Text(テスト表示)"
							TextWrapping="Wrap"
							VerticalScrollBarVisibility="Auto"/>
						<TextBox 
							x:Name="Debug_textbox4" 
							Text="Debug Text(テスト表示)"
							TextWrapping="Wrap"
							VerticalScrollBarVisibility="Auto"/>
						<TextBox 
							x:Name="Debug_textbox5" 
							Text="Debug Text(テスト表示)"
							TextWrapping="Wrap"
							VerticalScrollBarVisibility="Auto"/>
					</StackPanel>
				</ScrollViewer>
			</Grid>

            <Button 
				x:Name="debug_textbox_clear" 
				Content="デバッグ窓クリア" 
				Command="{Binding DebugTextboxClearCommand}"
				Margin="5,2" 
				Grid.Row="10" Grid.Column="0"/>
			<TextBox 
				x:Name="debug_textbox" 
				Text="{Binding DebugVM.DebugTextBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				VerticalScrollBarVisibility="Visible"
				VerticalContentAlignment="Top"
				TextWrapping="Wrap"
				AcceptsReturn="True"
				IsReadOnly="True"
				Margin="5,2"
				Grid.Row="11" Grid.Column="0"
				Grid.RowSpan="6" Grid.ColumnSpan="3">
				<i:Interaction.Behaviors>
					<behaviors:ScrollToEndBehavior/>
				</i:Interaction.Behaviors>
			</TextBox>
		</Grid>
	</Grid>
</Window>
